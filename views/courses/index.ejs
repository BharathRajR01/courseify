<% layout('layouts/boilerplate') %>
    <h1>All courses</h1>
    <ul>
        <% for (let course of courses){%>
            <div class="card" mb-3>
                <div class="row">
                    <div class="col-md-4">
                        <img class="img-fluid" src="<%= course.image%>" alt="">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <div class="card-title">
                                <h5 class="card-title">
                                    <%= course.title%>
                                </h5>
                                <p class="card-text">
                                    <%= course.description %>
                                </p>
                                <a class="btn btn-primary" href="/courses/<%=course.id %>">View Course</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <% } %>
    </ul>