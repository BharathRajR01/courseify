<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SomeApp</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/style.css">
    <script src="https://kit.fontawesome.com/f9cc6eebb4.js" crossorigin="anonymous"></script>
</head>

<body class="d-flex flex-column vh-100">
    <%- include('../partials/navbar') %>
        <%- include('../partials/flash') %>
            <div class="jumbotron jumbotron-fluid">
                <div class="container main-app-container">
                    <h1 class="display-4 jumbo">Welcome to ThisApp</h1>
                    <p class="lead">Learn from the best</p>
                    <h3 id="search-display-text">Looking for a course? </h3>
                    <!-- <a href="/courses"><input class="search purple-btn"  id="browse-btn" type="submit" value="Go back to all courses" name=""></a> -->
                    <form action="/courses" method="GET">
                        <input class="search-txt" id="search-txt" type="text" name="search"
                            placeholder="Search for a course...">
                        <button class="search purple-btn" id="search-btn" type="submit"> <i
                                class="fas fa-search"></i></button>
                    </form>
                </div>
            </div>
            <main class="container mt-5">
                <div class="col-md-6">
                    <% if(noMatch.length>= 1 && noMatch!=="noSearch") { %>
                        <h3>
                            <%= noMatch %>
                                <a href="/courses"><button class="btn btn-primary">Go back</button></a>
                        </h3>
                        <% } else if(noMatch!=="noSearch" ) { %>
                            <h3>Search results for <%= search %>
                            </h3>
                            <a href="/courses"><button class="btn btn-primary">Go back to all courses</button></a>
                            <% } else { %>

                                <h1>All courses</h1>
                                <% } %>
                </div>

                <div class="row row-cols-1 row-cols-lg-3 g-4">
                    <% for (let course of courses){%>
                        <div class="col">
                            <div class="card">
                                <img class="img-fluid" src="<%= course.image%>" alt="">
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-7">
                                            <h5 class="card-title">
                                                <%= course.title %>
                                            </h5>
                                            <p class="text-muted">
                                                <%= course.author.name %>
                                            </p>
                                            <p>
                                                <%= course.enrollers.length %> enrolled
                                            </p>
                                        </div>
                                        <div class="col-5">
                                            <!-- <div class="row"> -->
                                            <span>Tags: </span>
                                            <% course.tags.forEach(tag=>{ %>
                                                <div class="tags">
                                                    <%= tag %>
                                                </div>
                                                <% }) %>
                                                    <!-- </div> -->
                                        </div>
                                    </div>

                                    <a class="btn btn-primary" href="/courses/<%=course.id %>">View
                                        Course</a>
                                </div>
                            </div>
                        </div>
                        <% } %>
                </div>
            </main>
            <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"
                integrity="sha384-q2kxQ16AaE6UbzuKqyBE9/u/KzioAlnx2maXQHiDX9d4/zp8Ok3f+M7DPm+Ib6IU"
                crossorigin="anonymous"></script>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.min.js"
                integrity="sha384-pQQkAEnwaBkjpqZ8RU1fF1AKtTcHJwFl3pblpTlHXybJjHpMYo79HY3hIi4NKxyj"
                crossorigin="anonymous"></script>
            <script src='/scripts/validateForms.js'>
            </script>
            <%- include('../partials/footer')%>
</body>

</html>